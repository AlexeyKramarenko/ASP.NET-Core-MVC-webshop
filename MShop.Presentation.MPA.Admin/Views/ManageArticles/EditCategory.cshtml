@using MShop.Presentation.MPA.Admin.Controllers;
@using MShop.Presentation.MPA.Admin.Infrastructure.Extensions;
@model MShop.Presentation.MPA.Admin.Models.Articles.EditCategoryViewModel

<form asp-action="@nameof(ManageArticlesController.EditCategory)" 
	  asp-controller="@nameof(ManageArticlesController).ShortName()">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<input type="hidden" asp-for="Id" />
	</div>
	<div class="form-group">
		<label asp-for="Title" class="control-label">Title</label>
		<input type="text" asp-for="Title" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Importance" class="control-label">Importance</label>
		<input type="text" asp-for="Importance" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Description" class="control-label">Description</label>
		<input type="text" asp-for="Description" class="form-control" />
	</div>

	<div class="form-group">
		<input type="submit" value="Update" class="btn btn-default" />
	</div>
</form>
