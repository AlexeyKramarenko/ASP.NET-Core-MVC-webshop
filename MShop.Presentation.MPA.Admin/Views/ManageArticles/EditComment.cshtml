@using MShop.Presentation.MPA.Admin.Controllers;
@using MShop.Presentation.MPA.Admin.Infrastructure.Extensions;
@model MShop.Presentation.MPA.Admin.Models.Articles.EditCommentViewModel

<form asp-action="@nameof(ManageArticlesController.EditComment)" 
	  asp-controller="@nameof(ManageArticlesController).ShortName()">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<input type="hidden" asp-for="Id" />
	</div>
	<div class="form-group">
		<label asp-for="AddedDate" class="control-label">Added Date</label>
		<label>@Model.AddedDate</label>
	</div>
	<div class="form-group">
		<label asp-for="UserIp" class="control-label">User Ip</label>
		<label>@Model.UserIp</label>
	</div>
	<div class="form-group">
		<label asp-for="AddedBy" class="control-label">Added By</label>
		<input type="text" asp-for="AddedBy" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Comment" class="control-label">Comment</label>
		<label>@Model.Comment</label>
	</div>
	<div class="form-group">
		<input type="submit" value="Update" class="btn btn-default" />
	</div>
</form>

