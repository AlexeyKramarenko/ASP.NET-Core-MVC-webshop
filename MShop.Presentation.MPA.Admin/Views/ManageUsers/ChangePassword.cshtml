@using MShop.Presentation.MPA.Admin.Controllers;
@using MShop.Presentation.MPA.Admin.Infrastructure.Extensions;
@model MShop.Presentation.MPA.Admin.Models.Users.ChangePasswordViewModel


<h2>Change password for @Model.Email</h2>
<form asp-action="@nameof(ManageUsersController.ChangePassword)" 
	  asp-controller="@nameof(ManageUsersController).ShortName()">
	<div asp-validation-summary="All" class="text-danger"></div>

	<input type="hidden" asp-for="Id" />
	<input type="hidden" asp-for="Email" />

	<div class="form-group">
		<label asp-for="NewPassword" class="control-label">Новый пароль</label>
		<input type="text" asp-for="NewPassword" class="form-control" />
	</div>
	<div class="form-group">
		<input type="submit" value="Сохранить" class="btn btn-default" />
	</div>
</form>
