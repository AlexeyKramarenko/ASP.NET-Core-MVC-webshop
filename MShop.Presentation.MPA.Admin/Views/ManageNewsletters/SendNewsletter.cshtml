@using MShop.Presentation.MPA.Admin.Controllers;
@using MShop.Presentation.MPA.Admin.Infrastructure.Extensions;
@model MShop.Presentation.MPA.Admin.Models.Newsletters.SendNewsletterViewModel

<form asp-controller="@nameof(ManageNewslettersController).ShortName()" 
	  asp-action="@nameof(ManageNewslettersController.SendNewsletter)">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Subject" class="control-label">Subject</label>
		<input type="text" asp-for="Subject" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="HtmlBody" class="control-label">HtmlBody</label>
		<input type="text" asp-for="HtmlBody" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="PlainTextBody" class="control-label">PlainTextBody</label>
		<input type="text" asp-for="PlainTextBody" class="form-control" />
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-default" />
	</div>
</form>
