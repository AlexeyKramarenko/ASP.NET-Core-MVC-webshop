<script>
	var controller = '@Html.Raw(ViewContext.RouteData.Values["controller"] + "Controller")';
	var action = '@Html.Raw(ViewContext.RouteData.Values["action"])';

	var Dict = {};
	Dict["@nameof(ManageArticlesController)"] = "Articles";
	Dict["@nameof(ManageNewslettersController)"] = "Newsletters";
	Dict["@nameof(ManagePollsController)"] = "Polls";
	Dict["@nameof(ManageForumController)"] = "Forum";
	Dict["@nameof(ManageStoreController)"] = "Store";
	Dict["@nameof(ManageUsersController)"] = "Users";

	function toggle(controller) {
		obj = document.getElementById(controller);
		visible = (obj.style.display != "none")
		key = document.getElementById("x" + controller);
		if (visible) {
			obj.style.display = "none";
			key.innerHTML = "<table class='nav-tree-item'><tr><td><img class='img_folder'></td><td><b>" + Dict[controller] + "</b></td></tr></table>";
		} else {
			obj.style.display = "block";
			key.innerHTML = "<table class='nav-tree-item'><tr><td><img class='img_textfolder'></td><td><b>" + Dict[controller] + "</b></td></tr></table>";
		}
	}
	function setActive(action) {
		document.getElementById(action).style.color = "red";
	}

	//debugger;
	toggle(controller);
	setActive(action);



</script>