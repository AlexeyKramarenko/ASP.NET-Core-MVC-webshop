<style>
	td {
		color: #000000;
		font-family: Tahoma, Arial, Helvetica;
		font-size: 12px;
	}

	#nav-tree {
		border-collapse:unset;
		margin: 15px;
		padding: 10px;
		border: 1px solid black;
		border-radius: 15px;
		float: left;
	}

	@@media(max-width:650px) {
		#nav-tree {
			float: none;
		}

		#content {
			margin: 0;
		}
	}

	#nav-tree-item {
		padding: 1px;
		border: 0;
		border-spacing: 1px;
	}

	.nav-tree-item:hover {
		cursor: pointer;
	}

	img, td {
		height: 16px;
	}

	.breadcrumbs {
		margin-left: 2em;
	}

	.img_textfolder {
		content: url("/images/textfolder.gif");
	}

	.img_folder {
		content: url("/images/folder.gif");
	}
</style>


