	<input type="text" placeholder="E-mail here" />
	<a asp-controller="User" asp-action="Register">OK</a>
	<br /><br />

	<a asp-controller="Newsletters"
	   asp-action="ArchivedNewsletters"
	   asp-route-toDate="@DateTime.Now">
		Archived Newsletters
	</a>
</div>