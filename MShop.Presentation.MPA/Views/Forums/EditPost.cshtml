@using MShop.Presentation.MPA.Public.Infrastructure.Extensions;
@using MShop.Presentation.MPA.Public.Controllers;
@model MShop.Presentation.MPA.Public.Models.Forums.EditPostViewModel

<form asp-action="@nameof(ForumController.EditPost)" 
	  asp-controller="@nameof(ForumController).ShortName()">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<input type="hidden" asp-for="Id" />
	</div>
	<div class="form-group">
		<label asp-for="Title" class="control-label">Title</label>
		<input type="text" asp-for="Title" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Body" class="control-label">Body</label>
		<input type="text" asp-for="Body" class="form-control" />
	</div>
	<div class="form-group">
		@if (Model.Closed)
		{
			<label class="control-label">Closed</label>
		}
	</div>

	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-default" />
	</div>
</form>

<a asp-controller="@nameof(ForumController).ShortName()"
   asp-action="@nameof(ForumController.BrowseThreads)"
   asp-route-forumId="@Model.ForumId">Back to thread list</a>


<a asp-controller="@nameof(ForumController).ShortName()"
   asp-action="@nameof(ForumController.ShowThread)"
   asp-route-threadId="@Model.ThreadId">Back to thread page</a>

