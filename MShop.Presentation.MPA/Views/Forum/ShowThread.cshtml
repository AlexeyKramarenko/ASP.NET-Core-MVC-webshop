@using MShop.Presentation.MPA.Public.Infrastructure.Extensions;
@using MShop.Presentation.MPA.Public.Controllers;
@model  MShop.Presentation.MPA.Public.Models.Forums.ShowThreadViewModel 

<style>
	#thread {
		width: 500px;
		border: 1px solid orange;
	}

		#thread tr td {
			padding: 5px;
		}

	.thread-header {
		background-color: black;
		color: wheat;
	}

	.thread-left-col {
		vertical-align: top;
		width: 30%;
		background-color: antiquewhite;
	}
	#post-reply{
		text-decoration:underline;
		display:block;
		text-align:center;
		margin-bottom:25px;
	}
</style>
<a id="post-reply" 
   asp-controller="@nameof(ForumController).ShortName()" 
   asp-action="@nameof(ForumController.AddPost)" 
   asp-route-forumId="@Model.ForumId"
   asp-route-threadId="@Model.ThreadId">Post Reply</a>

<table id="thread">
	@foreach (var item in Model.Posts)
	{
		<tr class="thread-header">
			<td></td>
			<td>@item.Title</td>
		</tr>
		<tr>
			<td class="thread-left-col">
				@item.AddedDate <br />
				<hr />
				@item.AddedBy
			</td>
			<td>
				@item.Body
			</td>
		</tr>
	}
</table>